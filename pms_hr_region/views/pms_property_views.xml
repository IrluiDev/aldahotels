<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pms_property_region_view_form" model="ir.ui.view">
        <field name="name">pms.property.region.employee.form</field>
        <field name="model">pms.property</field>
        <field name="inherit_id" ref="pms.pms_property_views_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="team_alda2" string="Regional Staff">
                 <form name="Regional Staff">
                    <sheet>
                        <div class="container">
                            <group>
                                <field name="region_info"/>
                            </group>
                            <group>
                                <button name="action_open_region_form" 
                                        type="object" 
                                        string="Edit Region" 
                                        class="btn-primary"
                                />
                            </group>
                        </div>
                    </sheet>
                </form>
                </page>
            </xpath>
        </field>
    </record>
</odoo>