<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pms_property_region_assignment_form" model="ir.ui.view">
        <field name="name">pms.property.region.assignment.form</field>
        <field name="model">pms.property.region.assignment</field>
        <field name="arch" type="xml">
            <form string="PMS Property Region Assignment">
                <sheet>
                    <group>
                        <field name="region_id"/>
                        <field name="property_id"/>
                    </group>
                    <group>
                        <field name="rvm_position_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1"/>
                        <field name="rvm_employee1_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                    </group>
                    <group>
                        <field name="taz_position_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                        <field name="taz_employee_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                    </group>
                    <group>
                        <field name="taz_position_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                        <field name="taz2_employee_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                    </group>
                    <group>
                        <field name="tmz_position_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                        <field name="tmz_employee_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                    </group>
                    <group>
                        <field name="tmz2_employee_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                        <field name="tmz2_employee_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view for pms.property.region.assignment -->
    <record id="view_custom_region_assignment_tree" model="ir.ui.view">
        <field name="name">custom.region.assignment.tree</field>
        <field name="model">pms.property.region.assignment</field>
        <field name="arch" type="xml">
            <tree string="Region Assignments">
                <field name="region_id" string="Regional Manager"/>
                <field name="property_id" string="Property"/>
                <field name="rvm_position_id" string="RVM"/>
                <field name="rvm_employee1_id" string="Employee 1"/>
                <field name="taz_position_id" string="TAZ"/>
                <field name="taz_employee_id" string="Employee 2"/>
                <field name="taz_position_id" string="TAZ 2"/>
                <field name="taz2_employee_id" string="Employee 3"/>
                <field name="tmz_position_id" string="TMZ"/>
                <field name="tmz_employee_id" string="Employee 4"/>
                <field name="tmz2_employee_id" string="TMZ 2"/>
                <field name="tmz2_employee_id" string="Employee 5"/>
            </tree>
        </field>
    </record>s
</odoo>