<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pms_property_region_view_form" model="ir.ui.view">
        <field name="name">pms.property.region.employee.form</field>
        <field name="model">pms.property</field>
        <field name="inherit_id" ref="pms.pms_property_views_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='property_general']" position="inside">
                 <form name="Regional Staff">
                    <sheet>
                        <div class="container">
                            <div class="o_horizontal_separator">Property Information</div>
                                <group>
                                    <field name="total_rooms" readonly="1"/>
                                    <field name="total_tourism_rooms"/>
                                    <field name="open_date"/>
                                    <field name="is_ramp_up"/>
                                    <field name="is_ramp_rate"/>
                                    <field name="months_to_ramp_rate"/>
                                </group>
                            <group>
                                <field name="company_vat" readonly="1"/>
                                <field name="email" readonly="1"/>
                                <field name="bank" readonly="1"/>
                                <field name="acc_number" readonly="1"/>
                                <field name="swift" readonly="1"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </xpath>
        </field>
    </record>
</odoo>